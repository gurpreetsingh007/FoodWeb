<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greybg"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/available_button"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundshape_button"
        android:fontFamily="sans-serif-medium"
        android:text="Available items"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/view_pickups"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/available_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/create_roundshape"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="View pickups"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>