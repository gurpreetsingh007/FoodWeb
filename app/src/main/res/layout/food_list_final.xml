<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greybg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/foodPicFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/defaultlogo" />

    <Button
        android:id="@+id/addItemFinal"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundshape_button"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Add Item"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/foodName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodPicFinal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="foodName"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />





</RelativeLayout>