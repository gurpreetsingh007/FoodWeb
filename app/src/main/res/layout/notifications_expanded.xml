<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodbackground3"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/pickedUpItem"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickupTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/roundshape_button"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Picked Up Item"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/orgName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="orgName"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pickupTime"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orgName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="pickupTime"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>